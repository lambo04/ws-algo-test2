program InsertionSort;

var
  arr: array[1..100] of integer;
  n, i, key, j: integer; 

begin
  (* Lire la taille du tableau *)
  write('Entrez le nombre d''éléments dans le tableau : ');
  readln(n);
  
  (* Lire les éléments du tableau *)
  writeln('Entrez les éléments du tableau :');
  for i := 1 to n do
  begin
    read(arr[i]);
  end;

  (* Tri par insertion *)
  for i := 2 to n do 
  begin
    key := arr[i]; 
    j := i - 1;

    while (j >= 1) and (arr[j] > key) do
    begin
      arr[j + 1] := arr[j]; 
      j := j - 1; 
    end;
    arr[j + 1] := key; 
  end;

  (* Afficher le tableau trié *)
  writeln('Tableau trié :');
  for i := 1 to n do
  begin
    write(arr[i], ' ');
  end;
  writeln;
end.
